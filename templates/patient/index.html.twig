    <div class="card-footer">
        <div class="row">
            <div class="col-sm-11"></div>
            <div class="col-sm-1">
                <a type="button" class="btn btn-bg btn-facebook" href="{{ path('patient_new') }}">Ajouter</a>
            </div>
        </div>
    </div>
    -->
</div>
{% endblock %}
