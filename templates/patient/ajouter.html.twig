<div class="card card-custom">
    <div class="card-header">
        <h3 class="card-title">
            Créer un compte
        </h3>
        <div class="card-toolbar">
            <div class="example-tools justify-content-center">
                <span class="example-toggle" data-toggle="tooltip" title="View code"></span>
                <span class="example-copy" data-toggle="tooltip" title="Copy code"></span>
            </div>
        </div>
    </div>
    <!--begin::Form-->
    <form>
        <div class="card-body">
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label>Nom</label>
                        <input type="text" name="nom" id="name" class="form-control"  placeholder="Nom et Prénom"/>
{#                        <span class="form-text text-muted">We'll never share your email with anyone else.</span>#}
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="exampleInputPassword1">Nom Utilisateur</label>
                        <input type="text" name="user" id="username" class="form-control" placeholder="Nom Utilisateur"/>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="form-group">
                        <label>Email </label>
                        <input type="email" class="form-control" id="email" placeholder="Enter email"/>
{#                        <span class="form-text text-muted">We'll never share your email with anyone else.</span>#}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="exampleInputPassword1">Mot de passe</label>
                        <input type="password" class="form-control" id="password" placeholder="Password"/>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="form-group">
                        <label for="exampleInputPassword1">Password</label>
                        <input type="password" class="form-control" id="newPassword" placeholder="Confirmer Password"/>
                    </div>
                </div>
            </div>
            <!--
            <div class="form-group mb-1">
                <label for="exampleTextarea">Example textarea</label>
                <textarea class="form-control" id="exampleTextarea" rows="3"></textarea>
            </div>
            -->
        </div>
        <div class="card-footer">
            <button type="reset" class="btn btn-primary mr-2" onclick="patient_ajouter_(true)" >Ajouter</button>
            <button type="reset" class="btn btn-secondary">Annuler</button>
        </div>
    </form>
    <!--end::Form-->
</div>